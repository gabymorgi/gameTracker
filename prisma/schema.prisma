generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
  schemas   = ["public", "auth"]
}

model ScoreExtras {
  id   String @id @default(uuid())
  bias Int
  info String

  scoreId String
  score   Score  @relation(fields: [scoreId], references: [id])

  @@schema("auth")
}

model Score {
  id        String        @id @default(uuid())
  controls  Int?
  music     Int?
  lore      Int?
  bosses    Int?
  mechanics Int?
  graphics  Int?
  content   Int?
  finalMark Int
  extras    ScoreExtras[]
  game      Game?

  @@schema("auth")
}

model Game {
  id                   String      @id @default(uuid())
  name                 String
  playedTime           Int
  extraPlayedTime      Int?
  imageUrl             String
  appid                Int?        @unique
  start                Int
  end                  Int
  obtainedAchievements Int
  totalAchievements    Int
  gameTags             GameTag[]
  changeLogs           ChangeLog[]

  score   Score?  @relation(fields: [scoreId], references: [id])
  scoreId String? @unique
  state   State   @relation(fields: [stateId], references: [id])
  stateId String

  @@schema("auth")
}

model GameTag {
  game   Game   @relation(fields: [gameId], references: [id])
  gameId String
  tag    Tags   @relation(fields: [tagId], references: [id])
  tagId  String

  @@id([gameId, tagId])

  @@schema("auth")
}

model State {
  id         String      @id @default(uuid())
  hue        Int
  games      Game[]
  changeLogs ChangeLog[]

  @@schema("auth")
}

model Tags {
  id       String    @id @default(uuid())
  hue      Int
  gameTags GameTag[]

  @@schema("auth")
}

model ChangeLog {
  id           String @id @default(uuid())
  createdAt    Int
  hours        Int
  achievements Int
  state        State  @relation(fields: [stateId], references: [id])
  stateId      String
  game         Game   @relation(fields: [gameId], references: [id])
  gameId       String

  @@schema("auth")
}
